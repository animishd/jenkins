pipeline {
    agent any

    stages {
        stage('Complie') {
            steps {
                echo 'Compling Program'
            }
        }
         stage('Checking Java Version') {
            steps {
                sh 'java -version'
            }
        }
         stage('Deployment') {
            steps {
                echo 'Deployment Stage'
            }
        }
        stage('Creating User') { # To do this Step we need to update the Linux Sudoers (vi /etc/sudoers) with Jenkins user 
            steps {
                sh 'sudo useradd jenkins_creation1'
            }
        }
    }
}
